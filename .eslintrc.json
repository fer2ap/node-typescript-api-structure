{
    "env": {
        "es2020": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "semi": [2, "always"],
        "indent": ["error", "tab"],
        "no-tabs": "off",
        "no-trailing-spaces": "off",
        "no-unused-vars": "off",
        "array-bracket-spacing": [2, "always"]
    }
}
